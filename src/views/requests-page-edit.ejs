<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/requests.css">
    <link rel="stylesheet" href="/css/user-edit-buttons.css">

    <link rel="icon" href="/img/favicon-logo-urbano.png">

    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,700,0,0" />


    <title>Urbano t-shirts</title>

    <link rel="stylesheet" href="/css/header.css">
    <script src="/js/showSubmenuHeaderMobile.js" defer></script>
</head>

<body id="body-div">



    <!-- ===== HEADER ===== -->
  <%- include("./components/header.ejs") %>

    <main>

        <div class="main-container">

            <!-- =====  MENU LATERAL COM BUTÕES DE EDIÇÃO ===== -->
    <%- include("./components/user-edit-buttons.ejs") %>

            <section class="form-section">

              <form class="request-form" action="/usuario/area-cliente//endereco/editar" method="GET">
      
                <div class="hugging-form ">
      
                  <div class="assistant-form-box">
                    <div class="input-box">
                      <label for="requestNumber">Código do Pedido:</label>   
                      <input type="text" name="requestNumber" id="requestNumber" required value="<%= order.orderCode %>" >
                    </div>
                    <div class="input-box">
                      <label for="requestData">Data do pedido:</label>   
                      <input type="text" name="requestData" id="requestData" required value="<%= order.orderDate %>">
                    </div>
                  </div>
        
                
                  <div class="assistant-form-box">
                    <div class="input-box">
                      <label for="productName">Produto</label>   
                      <input type="text" name="productName" id="productName" required  value="<%= order.productName %>">
                    </div>
                    <div class="input-box">
                      <label for="productModel">Modelo</label>   
                      <input type="text" name="productModel" id="productModel" required  value="<%= order.productModel %>">
                    </div>
                  </div>
      
                  <div class="assistant-form-box">
                    <div class="input-box">
                      <label for="productSize">Tamanho</label>   
                      <input type="text" name="productSize" id="productSize" required  value="<%= order.productSize %>">
                    </div>
                    <div class="input-box">
                      <label for="productColor">Cor</label>   
                      <input type="text" name="productColor" id="productColor" required  value="<%= order.productColor %>">
                    </div>  
                  </div>
      
                  <div class="input-box">
                    <label for="quantity">Quantidade</label>   
                    <input class="quantity-class" type="text" name="quantity" id="quantity" required value="<%= order.quantity %>">
                  </div>
      
                </div>
      
                <button class="send_button" type="submit">Editar</button>
      
              </form>
      
            </section>

        </div>

    </main>

    <!-- ===== FOOTER ===== -->
  <%- include("./components/footer.ejs") %>

  <!-- ===== WHATSAPP BUTTON ===== -->
  <%- include("./components/whatsapp-button.ejs") %>

    <script src="assets/js/header-behavior.js"></script>
</body>

</html>