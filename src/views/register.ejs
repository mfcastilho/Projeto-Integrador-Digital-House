          </section>
  
          <section class="address-section">

            <div class="section-title-box">
              <img src="/img/register-data-icon.svg" alt="">
              <h3>Endereço</h3>
            </div>
           
            <div class="inputs-column-behavior">


              <div class="input-box">
                <label for="zip-code-id">Cep</label>
                <input type="text" name="zipCode" id="zip-code-id">
                <span class="input-erro-msg"></span>
              </div>
  

              <div class="hugging-inputs-box">
                <div class="input-box public-place">
                  <label for="public-place-id">Logradouro</label>
                  <input type="text" name="publicPlace" id="public-place-id">
                  <span class="input-erro-msg"></span>
                </div>
  
                <div class="input-box address-number">
                  <label for="number-id">Número</label>
                  <input type="number" name="number" id="number-id">
                  <span class="input-erro-msg"></span>
                </div>
              </div>
              
  
              <div class="input-box">
                <label for="complement-id">Complemento</label>
                <input type="text" name="complement" id="complement-id">
                <span class="input-erro-msg"></span>
              </div>

              <div class="input-box">
                <label for="district-id">Bairro</label>
                <input type="text" name="district" id="district-id">
                <span class="input-erro-msg"></span>
              </div>

              <div class="input-box">
                <label for="reference-id">Referência</label>
                <input type="text" name="reference" id="reference-id">
                <span class="input-erro-msg"></span>
              </div>
  
              <div class="hugging-inputs-box">
                <div class="input-box city">
                  <label for="city-id">Cidade</label>
                  <input type="text" name="city" id="city-id">
                  <span class="input-erro-msg"></span>
                </div>
  
                <div class="input-box state">
                  <label for="state-id">UF</label>
                  <select name="state-id" id="state-id">
