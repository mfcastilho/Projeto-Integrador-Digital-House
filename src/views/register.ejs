              <span class="input-erro-msg"></span>
            </div>

            <div class="input-box">
              <label for="confirm-email-id">Confirmar E-mail</label>
              <input type="email" name="confirmEmail" id="confirm-email-id">
              <span class="input-erro-msg"></span>
            </div>
            
          </div>

          <div class="wrapper-inputs-box">

            <div class="input-box">
              <label for="password-id">Senha</label>
              <input type="password" name="password" id="password-id">
              <span class="input-erro-msg"></span>
            </div>

            <div class="input-box">
              <label for="confirm-password-id">Confirmar senha</label>
              <input type="password" name="confirmPassword" id="confirm-password-id">
              <span class="input-erro-msg"></span>
            </div>

          </div>

        </section>
  
