        <div class="wrapper-sections-box">

          <section class="personal-data-section">

            <div class="section-title-box">
              <img src="/img/register-data-icon.svg" alt="">
              <h3>Dados pessoais</h3>
            </div>
  
            <div class="inputs-column-behavior">

              <div class="input-box">
                <label for="name-id">Nome completo</label>
                <input type="text" name="name" id="name-id">
                <span class="input-erro-msg"></span>
              </div>
  
              <div class="input-box">
                <label for="cpf-id">CPF</label>
                <input type="text" name="cpf" id="cpf-id">
                <span class="input-erro-msg"></span>
              </div>

