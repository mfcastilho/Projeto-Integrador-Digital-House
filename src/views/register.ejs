              <div class="input-box">
                <label for="tel-id">Telefone</label>
                <input type="tel" name="tel" id="tel-id">
                <span class="input-erro-msg"></span>
              </div>

              <div class="input-box">
                <label for="genre-id">Sexo</label>
                <select class="select-gender">  
                  <option name="genre" value="masculino">Masculino</option>
                  <option name="genre" value="feminino">Feminino</option>
