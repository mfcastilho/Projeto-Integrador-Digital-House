<header>
    <ul class="header-container">
        <div class="logo-box">
            <li><a href="/"><img src="/img/logo-urbano-tshirt-trasparent.png" alt=""></a></li>               
        </div>
        <form action="/search" method="GET">
            <input type="text" name="query" placeholder="O que você procura?">
            <button type="submit" class="lupa"></button>
        </form>

        <div class="user-header-icons">
            <li><a href="/carrinho"><img src="/img/carrinho.svg" alt=""></a></li>

            <% if(locals.userLogged && userLogged){ %>
                <li><a href="/usuario/area-cliente/<%= userLogged.id %>/dados-pessoais"><img src="/img/login.svg" alt=""></a></li>
                <li style="color: #FFF;">
                    <p>Olá,</p>
                    <div class="hugging" style="display:flex; align-items: flex-end;">
                        <p style="width: 300%;"><%= userLogged.name %></p>
                        <form action="/usuario/logout" method="POST">
                        <button type="submit" style="font-size: 1rem;margin-left: 6px;cursor: pointer;">Sair</button>
                        </form>
                    </div>
                    
                    </li>
            <% } else { %>
                <li><a href="/login"><img id="login-img" src="/img/login.svg" alt=""></a></li>
            <% } %>

            <div class="submenu-box">
                <div class="seta"></div>
                <ul class="submenu">
                    <li class="user-name">Olá, cliente</li>
                    <li class="quit-button"><form action=""><button type="submit">Sair</button></form></li>
                    <hr>
                    <li class="user-account-button"><a href="">Minha conta</a></li>
                </ul>
            </div>
            
